<Window x:Class="_2025_09_22_Pull_Request_und_Issues.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025_09_22_Pull_Request_und_Issues"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#f5f5f5" >
        <Border Background="White" CornerRadius="12" Padding="20" >
            <StackPanel>
                <!-- Titel -->
                <TextBlock Text="📝 ToDo-Liste" 
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   Foreground="#333"
                   Margin="0,0,0,20"/>



                <!-- Liste -->
                <ListBox Name="TodoList"
     Height="250"
     BorderThickness="0"
     Background="#fafafa"
     Padding="10"
     Margin="0,0,0,20"
     FontSize="16"
     MouseDoubleClick="TodoList_MouseDoubleClick"
     KeyDown="TodoList_KeyDown"/>


                <!-- Eingabe + Button nebeneinander -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Name="input" 
                     Width="250" 
                     Height="35" 
                     FontSize="14" 
                     Margin="0,0,10,0" 
                     Padding="5"
                     VerticalContentAlignment="Center"
                     Background="#fff"
                     BorderBrush="#ccc"/>

                    <Button Content="➕ Hinzufügen" 
                    Width="120" 
                    Height="35"
                    FontSize="14"
                    Background="#4CAF50" 
                    Foreground="White" 
                    BorderBrush="#4CAF50" 
                    Cursor="Hand"
                    Click="AddTodo"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

</Window>
